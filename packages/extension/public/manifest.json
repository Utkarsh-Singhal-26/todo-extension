{
  "manifest_version": 3,
  "name": "ToDo Extension",
  "version": "1.0.0",
  "description": "A simple ToDo extension",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "assets/service_worker.js"
  },
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content_script.js"]
    }
  ]
}
